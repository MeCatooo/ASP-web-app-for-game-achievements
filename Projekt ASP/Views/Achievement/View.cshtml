@{

}
<div>Id:@Model.PostId</div>
<div>Nazwa osiągnięcia: @Model.Text</div>
<div>Gra w której osiągnięto: @Model.PostTime</div>

<span><a asp-controller="Achievement" asp-action="EditForm" asp-route-id="@Model.PostId">Edytuj</a></span>
<span><a asp-controller="Achievement" asp-action="DeleteForm" asp-route-id="@Model.PostId">Usuń</a></span>
@{
    if (Model.Comments != null)
    {
        foreach (var item in Model.Comments)
        {
            <div class="border border-primary border-2 p-2 fon">
                <div>
                    @item.PostTime
                    <div>
                        @item.Text
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div>Brak komentarzy</div>
    }

}
<div class="m-2"><a asp-controller="Achievement" asp-action="AddCommentForm" asp-route-id="@Model.PostId">Dodaj komentarz</a></div>
