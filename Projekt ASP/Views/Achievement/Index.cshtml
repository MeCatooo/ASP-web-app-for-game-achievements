@{
}
<h2>Lista rzadkich osiągnięć</h2>
<div class="achievements">
    @foreach (var achievement in @Model)
    {
        <a asp-action="">
            <div class="achievement">
                <div>
                    @achievement.Name
                </div>
                <div>
                    @achievement.Game
                </div>
                <div>
                    @achievement.Achieved
                </div>
            </div>
        </a>
    }
</div>
<a asp-action="AddAchievement" asp-controller="Achievement">Dodaj</a>